<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/auth_input_bg" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/auth_input_border_focused" />
            <padding android:left="20dp" android:right="20dp" android:top="16dp" android:bottom="16dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/auth_input_bg" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/auth_input_border" />
            <padding android:left="20dp" android:right="20dp" android:top="16dp" android:bottom="16dp" />
        </shape>
    </item>
</selector>
